{{> header }}

<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <br><br>
    <h1 class="header center black-text">Find your closest disposal location.</h1>
    <div class="row center">
      <h5 class="header col s12 light">Please fill out the form below to locate your closest recycling center.</h5>
    </div>

    <br><br>

  </div>
</div>


<div class="container">
  <div class="section">

    <!--   Cards Section   -->
    <div class="row">
      <div class="col s12 m12">
        <div class="card">
          <div class="card-image">
            <img src="https://pkelliher.imgix.net/mapPlaceHolder.png?auto=format&fit=crop&h=500&w=700">

          </div>
          <!-- <div class="card-content">
              <p>Please enter your zip code and click submit to find a recycling center near you or click on the
                dropdown menu to select a specific material type and find a recycling center near you which will accept
                it. </p>
              <div class="input-field col s6"></div>
              <input id="Zip" type="text" class="validate">
              <label for="Zip">Enter Zip code</label>
              </div> -->
          <div class="card-content">
            <p>Please enter your street, city / town and state and click submit to find a local recycling center,
              <i><b>and</b></i> click on the
              dropdown menu to select a specific material type and find a recycling center near you which will accept
              it. </p>
            <div class="row">
              
              {{!-- Form for get/post requests --}}
              <form class="col s12" {{!-- sending the form from /disposallocations to /disposallocationresults --}}
                action="/disposallocations" method="POST">
                <div class="row">
                  <div class="input-field col s12">
                    <input id="Address" type="text" class="validate" name="street">
                    <label for="Address">Street address</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s6">
                    <input id="City" type="text" class="validate" name="city">
                    <label for="City">City / Town</label>
                  </div>
                  <div class="input-field col s6">
                    <input id="State" type="text" class="validate" name="state">
                    <label for="State">State</label>
                  </div>
                </div>
            </div>
            <!-- Dropdown Trigger -->
            {{!-- <select name="materials"> --}}
            <a class='dropdown-trigger btn' href='#' data-target='dropdown1'>Select A Material From the Dropdown List
              &#8681;</a>

            <!-- Dropdown Structure -->
            <ul id='dropdown1' class='dropdown-content'>
              {{#each materials}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </ul>
            {{!-- </select> --}}

          </div>
        </div>
        <div class="card-content">
          <button class="btn waves-effect waves-light" type="submit" name="action" id="submit">Submit
            <i class="material-icons right">send</i>
          </button>
          </form>
          {{!-- end of address input form --}}

          <br><br>
          <br><br>
        </div>
      </div>
    </div>


  </div>
</div>

</div>
<br><br>
</div>

{{> footer }}